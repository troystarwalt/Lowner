<%= content_for :page_title, 'Lown It' %>


 <p>Who do you want to share this with?</p>

<h3>A list of all the Users</h3>
<%= form_tag new_item_share_path, :method => 'get', id: 'users_search' do %>
<p>
	<%= text_field_tag :search_users, params[:search_users] %>
	<%= hidden_field_tag :item_id, params[:item_id] %>
	<%= submit_tag "Search", :name => nil %>
</p>
<% end %>
<%  @users.each do |user| %>

	<%= user.username %>
	<%= user.id %>
	<%= link_to "Loan It", item_shares_path(:user_id => user.id, :item_id => @item_id), :method => :post %>
	<hr>
	<br>

<% end %>	