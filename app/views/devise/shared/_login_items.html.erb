<% if user_signed_in? %>
<li class= "nav-item">
	<%= link_to destroy_user_session_path, :method => :delete, class: "nav-link" do %>
	<i class="fa fa-sign-out"></i><span class="login_item">Logout</span>
	<% end %>        
</li>
<% else %>
<li class= "nav-item">
	<%= link_to new_user_session_path, class: "nav-link" do%>
		<i class="fa fa-sign-in"></i><span class="login_item">Login</span>
	<% end  %>  
</li>
<% end %>