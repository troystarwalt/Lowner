
<%= @user.first_name %>
<%= @user.last_name %>
<%= @user.bio %>
<%= @user.cell_phone %>
<figure class='clip-wrap'>
<%= image_tag @user.avatar.url(:medium), class: "clip-svg-profile" %>
<figcaption><%= @user.username %></figcaption>
</figure>

<svg class="clip-svg">
  <defs>
    <clipPath id="clip-polygon" clipPathUnits="objectBoundingBox" >
      <polygon points="0 1, 0.1 0, 1 0, 0.8 1" />
    </clipPath>
  </defs>
</svg>    